# Template file for 'mimalloc'
pkgname=mimalloc
version=2.0.1
revision=1
build_style=cmake
short_desc="General purpose allocator with excellent performance characteristics"
maintainer="Sora Morimoto <sora@morimoto.io>"
license="MIT"
homepage="https://github.com/microsoft/mimalloc"
distfiles="${homepage}/archive/v${version}.tar.gz"
checksum=a25c096dbd100b5f872bf458c080ebe539dbb8275c76e44e1f02b07341e6ca04

post_install() {
	vlicense LICENSE
}

mimalloc-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/lib/mimalloc-2.0/include
		vmove "usr/lib/mimalloc-2.0/*.a"
		vmove "usr/lib/mimalloc-2.0/*.so"
		vmove "usr/lib/mimalloc-2.0/*.so.2.0"
	}
}
